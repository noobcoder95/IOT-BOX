<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <Button
        android:id="@+id/fifth_mouse_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="xMouseClickMouse"
        app:layout_constraintEnd_toStartOf="@+id/second_mouse_button"
        app:layout_constraintStart_toEndOf="@+id/first_mouse_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/second_mouse_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="xMouseClickMouse"
        app:layout_constraintBottom_toTopOf="@+id/mouse_switch"
        app:layout_constraintEnd_toStartOf="@+id/fourth_mouse_button"
        app:layout_constraintStart_toEndOf="@+id/fifth_mouse_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fourth_mouse_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="xMouseClickMouse"
        app:layout_constraintEnd_toStartOf="@+id/third_mouse_button"
        app:layout_constraintStart_toEndOf="@+id/second_mouse_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/third_mouse_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="xMouseClickMouse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/first_mouse_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="xMouseClickMouse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/mouse_switch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/second_mouse_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fifth_mouse_button" />
</androidx.constraintlayout.widget.ConstraintLayout>